---
import { useTranslations } from '../i18n';
import type { Language } from '../i18n';

const lang = Astro.currentLocale as Language;
const t = useTranslations(lang);
---

<section class="py-24 bg-gradient-to-br from-mk-red/5 via-white to-mk-yellow/5">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <div class="md:flex">
        <div class="md:w-1/2 p-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">
            {t('booking.title')}
          </h2>
          <p class="text-xl text-gray-600 mb-8 leading-relaxed">
            {t('booking.description')}
          </p>
          <a
            href={`/${lang}/contact`}
            class="inline-flex items-center px-8 py-4 bg-[$mk-red] text-white rounded-lg font-semibold shadow-lg hover:bg-mk-red/90 transition-all transform hover:scale-105 duration-200"
          >
            {t('booking.cta')}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
        <div class="md:w-1/2 bg-gradient-to-br from-mk-red to-mk-yellow p-12 flex items-center justify-center">
          <div class="text-white text-center">
            <div class="mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <p class="text-2xl font-semibold">Флексибилно време</p>
            <p class="mt-2 text-white/90">Достапни термини во текот на целиот ден</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>