---
import { useTranslations } from '../i18n';
import type { Language } from '../i18n';

const lang = Astro.currentLocale as Language;
const t = useTranslations(lang);
---

<section class="relative bg-gradient-to-br from-mk-red via-mk-red to-mk-yellow py-32">
  <div class="absolute inset-0 bg-[url('/hero-pattern.svg')] opacity-10"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="md:flex md:items-center md:justify-between">
      <div class="md:w-1/2 text-white">
        <h1 class="text-5xl font-bold leading-tight mb-6 drop-shadow-sm">
          {t('hero.title')}
        </h1>
        <p class="text-xl mb-8 text-white/90 leading-relaxed max-w-xl">
          {t('hero.subtitle')}
        </p>
        <div class="flex space-x-4">
          <a
            href={`/${lang}/contact`}
            class="inline-flex items-center px-8 py-4 rounded-lg bg-white text-mk-red font-semibold shadow-lg hover:bg-gray-50 transition-all transform hover:scale-105 duration-200"
          >
            {t('hero.cta')}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
      <div class="mt-12 md:mt-0 md:w-1/2 md:pl-12">
        <div class="relative aspect-video rounded-xl overflow-hidden shadow-2xl transform md:translate-y-6">
          <img
            src="/teacher-placeholder.jpg"
            alt="Teaching Macedonian"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </div>
</section>