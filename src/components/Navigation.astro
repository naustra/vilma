---
import { useTranslations } from '../i18n';
import type { Language } from '../i18n';

const lang = Astro.currentLocale as Language;
const t = useTranslations(lang);
---

<nav class="flex space-x-4">
  <a href={`${import.meta.env.BASE_URL}/${lang}/`} class="text-gray-800 hover:text-mk-red">{t('nav.home')}</a>
  <a href={`${import.meta.env.BASE_URL}/${lang}#contact`} class="text-gray-800 hover:text-mk-red">{t('nav.contact')}</a>
</nav>